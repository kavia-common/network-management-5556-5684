# BackendAPIService - Environment Variables (example)
# Copy this file to `.env` and fill in values. Do NOT commit your real `.env`.

# Preferred single-URI configuration (recommended)
# Examples:
# - mongodb://localhost:27017/network_devices
# - mongodb+srv://<user>:<pass>@cluster0.mongodb.net/<db>?retryWrites=true&w=majority
MONGODB_URI=mongodb://localhost:27017/network_devices

# Optional: Database name to use/override (if not embedded in URI or for clarity)
MONGODB_DB_NAME=network_devices

# Optional: TLS/SSL toggle (true/false)
MONGODB_TLS=false

# Optional: Connection timeout in milliseconds
MONGODB_CONNECT_TIMEOUT_MS=5000

# Optional: Collection name for devices
MONGODB_COLLECTION=device

# Fallback individual settings (only used if MONGODB_URI is not set)
# MONGODB_HOST=localhost
# MONGODB_PORT=27017
# MONGODB_USERNAME=
# MONGODB_PASSWORD=
# MONGODB_OPTIONS=replicaSet=rs0&authSource=admin
