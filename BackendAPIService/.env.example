# Flask app
FLASK_ENV=development
FLASK_DEBUG=1
PORT=3001

# API display (optional)
API_TITLE=Network Device Management API
API_VERSION=v1

# MongoDB connection
# Use a standard MongoDB connection string; credentials can be embedded in URI or provided via MONGODB_USER/PASSWORD
MONGODB_URI=mongodb://localhost:27017
MONGODB_DB_NAME=network_devices
MONGODB_TLS=0
# Optional if not using credentials in URI
MONGODB_USER=
MONGODB_PASSWORD=

# Utilities
PING_TIMEOUT_MS=2000
