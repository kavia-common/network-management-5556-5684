# BackendAPIService environment example
# Copy this file to .env and adjust values for your environment.

# Preferred single URI. If not set, defaults to mongodb://localhost:27017/network_devices
MONGODB_URI=mongodb://localhost:27017/network_devices

# Optional overrides
MONGODB_DB_NAME=network_devices
MONGODB_COLLECTION=device

# TLS (true/false)
MONGODB_TLS=false

# Connect timeout in ms for server selection
MONGODB_CONNECT_TIMEOUT_MS=5000

# Alternative construction (only used if MONGODB_URI is not provided)
# MONGODB_HOST=localhost
# MONGODB_PORT=27017
# MONGODB_USERNAME=
# MONGODB_PASSWORD=
# MONGODB_OPTIONS=
