# BackendAPIService environment configuration

# MongoDB connection string (Required)
# Example (no auth): mongodb://localhost:27017
# Example (with auth): mongodb://username:password@dbhost:27017
MONGODB_URI=mongodb://localhost:27017

# MongoDB database name (Required)
MONGODB_DB_NAME=network_devices

# Enable TLS/SSL for MongoDB connection (Optional: true/false, default=false)
MONGODB_TLS=false

# App host and port (Optional; defaults shown)
APP_HOST=0.0.0.0
APP_PORT=3001
