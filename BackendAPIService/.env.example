# BackendAPIService environment example

# Preferred single-URI configuration
MONGODB_URI=mongodb://localhost:27017

# Database name (default: network_devices)
MONGODB_DB_NAME=network_devices

# Enable TLS (true/false)
MONGODB_TLS=false

# Connection timeout for server selection in milliseconds (default: 5000)
MONGODB_CONNECT_TIMEOUT_MS=5000

# Fallback individual settings (only used if MONGODB_URI is not set)
# MONGODB_HOST=localhost
# MONGODB_PORT=27017
# MONGODB_USERNAME=
# MONGODB_PASSWORD=
# MONGODB_OPTIONS=replicaSet=rs0&authSource=admin
